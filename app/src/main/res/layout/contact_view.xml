<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/lbl_contact_name"
        android:id="@+id/tvContactName"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/lbl_contact_id"
        android:id="@+id/tvContactID"
        android:layout_gravity="right"
        android:layout_alignBottom="@+id/tvContactName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingRight="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Designation"
        android:id="@+id/tvDesignation"
        android:layout_below="@+id/tvContactID"
        android:layout_alignLeft="@+id/tvContactName"
        android:layout_alignStart="@+id/tvContactName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Mobile No"
        android:id="@+id/tvMobileNo"
        android:layout_below="@+id/tvDesignation"
        android:layout_alignLeft="@+id/tvDesignation"
        android:layout_alignStart="@+id/tvDesignation" />

</RelativeLayout>